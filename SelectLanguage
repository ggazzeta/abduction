using System;
using System.Collections.Generic;
using System.Text;

namespace AppEstudo
{
    class SelectLanguage
    {
        private static string _myText;


        //Seleciona a Linguagem -- Esse ir√° gravar no banco a linguagem
        public static int Select()
        {
            Console.WriteLine("EN or PT?");
            _myText = Console.ReadLine();

            if (!string.IsNullOrEmpty(_myText) && _myText == "PT")
            {
                return 1;
            }

            else if (!string.IsNullOrEmpty(_myText) && _myText == "EN")
            {
                return 2;
            }

            else
            {
                return 0;
            }
        }
    }
}
